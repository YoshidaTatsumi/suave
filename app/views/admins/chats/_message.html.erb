<div id="chat-<%= chat.id %>" class="row">
	<!-- 投稿がユーザーの場合 -->
    <% if chat.user.present? %>
      <div class="col-2">
        <%= attachment_image_tag chat.user, :image,:fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg", size:'60x60' %>
        <p><%= chat.user.name %></p>
      </div>

      <div class="col-8">
        <p><%= chat.message %></p>
        <%= chat.created_at.strftime("%Y/%m/%d %H:%M") %>
      </div>

      <p class="chat-delete btn btn-danger" data-chat="<%= chat.id %>" style="height: 40px;">削除</p>

    <!-- 投稿が管理者の場合 -->
    <% else %>
      <div class="col-2">
        <%= image_tag 'admin.jpg', size: '60x60' %>
        <p style="color: red">Suave管理者</p>
      </div>

      <div class="col-8">
        <p style="color: red;"><%= chat.message %></p>
        <%= chat.created_at.strftime("%Y/%m/%d %H:%M") %>
      </div>

      <p class="chat-delete btn btn-danger" data-chat="<%= chat.id %>" style="height: 40px;">削除</p>
    <% end %>
</div>