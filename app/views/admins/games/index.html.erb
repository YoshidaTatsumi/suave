<h2>ゲーム一覧</h2>
<table class="table">
	<tr>
		<th>投稿者</th>
		<th>タイトル</th>
		<th>内容</th>
	</tr>
	<% @games.each do |game| %>
		<tr>
			<td>
				<%= link_to admins_user_path(game.user) do %>
					<%= attachment_image_tag game.user, :image,:fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg", size:'60x60' %>
					<%= game.user.name %>
				<% end %>
			</td>
			<td>
				<%= link_to admins_game_path(game) do %>
					<%= game.title %>
				<% end %>
			</td>
			<td><%= game.introduction[0..100] %></td>
		</tr>
	<% end %>
</table>
