<h2>本日投稿されたゲーム</h2>
<div class="row" style= "margin-top: 40px;">
	<% @games.first(4).each do |game| %>
		<div class="col-xs-3">
			<%= link_to admins_game_path(game) do %>
				<% screenshot = game.screenshots.find_by(game_id: game.id) %>
				<% if screenshot.present? %>
		 			<%= attachment_image_tag screenshot, :image,:fill, 200, 200, format: 'jpeg' %>
		 		<% else %>
		 			<%= image_tag 'NoImage.jpg', style:"width: 200px; border: 1px solid #000;", class:"center-block" %>
		 		<% end %>
		 		<br><%= game.title %>
		 	<% end %>
		 </div>
	<% end %>
</div>
<%= link_to "もっと見る", admins_games_path(place: "top"), class:"pull-right" %>

<div class="row" style="margin-top: 100px;">
	<%= link_to "ユーザー一覧", admins_users_path, class:"box1 col-xs-3" %>
	<%= link_to "ゲーム一覧", admins_games_path, class:"box2 col-xs-3 col-xs-offset-1" %>
	<%= link_to "トークルーム一覧", admins_chats_path, class:"box3 col-xs-3 col-xs-offset-1" %>
</div>