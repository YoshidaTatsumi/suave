<h2>フォロワー一覧</h2>
<table class="table">
	<tr>
		<th>ID</th>
		<th>ユーザー名</th>
		<th>フォロー数</th>
		<th>フォロワー数</th>
	</tr>
	<% @user.follower_user.each do |user| %>
		<tr>
			<td>
				<%= user.id %>
			</td>
			<td>
				<%= link_to admins_user_path(user) do %>
					<%= attachment_image_tag user, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %><br>
					<%= user.name %>
				<% end %>
			</td>
			<td>
				フォロー数：<%= user.active_relationships.count %>
			</td>
			<td>
				フォロワー数：<%= user.passive_relationships.count %>
			</td>
		</tr>
	<% end %>
</table>