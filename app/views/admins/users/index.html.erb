<h2>ユーザー</h2>
<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<table class="table">
			<tr class="active">
				<th>ユーザーID</th>
				<th>ユーザー名</th>
				<th>自己紹介</th>
				<th>ステータス</th>
			</tr>
			<% @users.each do |user| %>
				<tr>
					<td><%= user.id %></td>
					<td>
						<%= link_to admins_user_path(user) do %>
							<%= attachment_image_tag user, :image,:fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg", size:'60x60' %>
							<%= user.name%>
						<% end %>
					</td>
					<td><%= user.introduction[0..100] %></td>
					<td>
						<% if user.status == true %>
							<%= "有効" %>
						<% else %>
							<%= "退会済み" %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</table>
	</div>
</div>
