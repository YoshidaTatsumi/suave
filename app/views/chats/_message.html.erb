<% chats.each do |chat| %>
  <% if chat.user_id == current_user.id %>
    <%= attachment_image_tag chat.user, :image,:fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
    <%= chat.user.name %>
    <p style="text-align: right;"><%= chat.message %></p>
  <% else %>
    <%= attachment_image_tag chat.user, :image,:fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
    <%= chat.user.name %>
    <p style="text-align: left;"><%= chat.message %></p>
  <% end %>
<% end %>