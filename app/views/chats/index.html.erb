<% if flash[:notice] %>
	<div class="row flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<h2>ルーム作成</h2>
<%= form_for(@room, url: chats_path) do |f| %>
	<%= f.label :name, "ルーム名" %>
	<%= f.text_field :name %>

	<%= f.label :introduction, "内容" %>
	<%= f.text_field :introduction %>

	<%= f.submit "作成" %>
<% end %>

<h2>ルーム一覧</h2>
<table class="table">
	<tr class="active">
		<th>作成者</th>
		<th>ルーム名</th>
		<th>内容</th>
	</tr>
	<% @rooms.each do |room| %>
		<tr>
			<td><%= room.user.name %></td>
			<td>
				<%= link_to talk_room_chats_path(room) do %>
					<%= room.name %>
				<% end %>
			</td>
			<td><%= room.introduction %></td>
		</tr>
	<% end %>
</table>