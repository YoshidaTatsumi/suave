<% screenshot = game.screenshots.find_by(game_id: game.id) %>

<div class="row game-box">
	<%= link_to game_path(game) do %>
		<div class="col-xs-2">
			<%= attachment_image_tag screenshot, :image,:fill, 1920, 1080, format: 'jpeg', fallback:"NoImage.jpg" ,size:"200x112" %>
		</div>

		<div class="col-xs-9 col-xs-offset-1">
			<div class="row" style="margin-top: 10px; color: white;">
				<%= game.title %>
			</div>
			<div class="row">
				<% game.tag_list.first(6).each do |tag| %>
					<%= link_to search_path(tag: tag), class:"btn btn-primary", style:"margin-top: 40px;" do %>
						<%= tag %>
					<% end %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>

