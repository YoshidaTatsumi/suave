<h2>ゲーム投稿ページ</h2>

<% if @game.errors.any? %>
	<h2><%= @game.errors.count %>
		 errors prohibited this obj from being saved:
	</h2>
	<ul>
		<% @game.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for(@game) do |f| %>
	<div class="row">
		<div class="col-xs-6">
			<div class="row">
				<%= f.label :title, "タイトル", class:"col-xs-2" %>
				<%= f.text_field :title, class:"col-xs-4" %>
			</div>

			<div class="row">
				<%= f.label :introduction, "説明文", class:"col-xs-2" %>
				<%= f.text_area :introduction, class:"col-xs-4" %>
			</div>

			<div class="row">
				<%= f.label :url, "ダウンロードURL", class:"col-xs-2" %>
				<%= f.text_area :url, class:"col-xs-4" %>
			</div>
		</div>

		<% f.fields_for :screenshots do |i| %>
			<div class="col-xs-4 col-xs-offset-1">
				<%= i.label :image, "スクリーンショット" %><br>
	    		<%= i.attachment_field :image, multiple: true %>
	    	</div>
		<% end %>

			<div class="row">
				<%= f.submit "アップロード", class:"col-xs-3 col-xs-offset-4 btn btn-primary" %>
			</div>

		</div>
	</div>
<% end %>