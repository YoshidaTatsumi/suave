<h2>フォローユーザー</h2>
<table class="table tsticky_table">
	<tr class="table-primary">
		<th>画像</th>
		<th>ユーザー名</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td>
				<%= link_to user_path(user.id) do %>
					<%= attachment_image_tag user, :image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg", size:'80x80' %>
				<% end %>
			</td>
			<td>
				<%= link_to user_path(user.id) do %>
					<%= user.name %>
				<% end %>
			</td>
			<td>
				フォロー数：<%= user.active_relationships.count %>
			</td>
			<td>
				フォロワー数：<%= user.passive_relationships.count %>
			</td>
			<td>
				<% if current_user.id != user.id %>
					<%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %>
				<% end %>
			</td>
		</tr>
	<% end %>
</table>
<%= paginate @users, class: "paginate" %>